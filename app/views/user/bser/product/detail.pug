extends ../aalayout/layout

block content
	input#pdfirId(type="hidden", value=pdfir._id)
	.container.mt-3
		#basic_elem.page(style="display:none")
			.row.my-3
				.col-4
					a.btn.btn-info(href="/bsPdfirs") <span class="oi oi-arrow-thick-left"></span>
				.col-4.text-center
					a.btn.btn-danger(href="/bsPdfirDel/"+pdfir._id) 删除
				.col-4.text-right
					button.btn.btn-warning#upBtn(type="button") <span class="oi oi-pencil"></span>

			table.table.table-bordered.my-3
				tr
					td 编号
					td #{pdfir.code}
				tr
					td 名称
					td #{pdfir.nome}
				tr
					td 价格
					td #{pdfir.price}
				tr
					td 进价
					td #{pdfir.cost}
				tr
					td 库存
					td #{pdfir.stock}
				tr
					td 销量
					td #{pdfir.sales}

			.row.mt-5
				.col-12(align="center")
					img#pdfirUpDefaultImg(src=pdfir.photo, width="200px")

		#update_elem.page(style="display:none")
			.row.my-3
				.col-6
					button.btn.btn-secondary#cnlBtn(type="button") <span class="oi oi-x"></span>
				.col-6.text-right
					button.btn.btn-success#subBtn(type="button") <span class="oi oi-location"></span>

			form.mt-3#bsProdUpdForm(method="post", action="/bsPdfirUpd", enctype="multipart/form-data")
				input(type="hidden", name="obj[_id]", value=pdfir._id)
				input(type="hidden", name="obj[orgPhoto]", value=pdfir.photo)
				input(type="hidden", name="obj[photoDir]", value=Conf.photoPath.proPhoto)
				.row
					.offset-3.col-6
						img#crtImg(src=pdfir.photo, width='100%')
				.form-group.row.udPhoto(style="display:none")
					label.col-4.col-form-label(for="uploadPhoto") PdImg
					.col-8
						input#uploadPhoto.btn.btn-info.btn-block(type="file", name="uploadPhoto")
				hr
				.form-group.row
					label.col-4.col-form-label(for="iptCode") 编号
					.col-8
						input#iptCode.form-control(type="text", name="obj[code]", autocomplete="off", value=pdfir.code)
				.form-group.row
					label.col-4.col-form-label(for="iptNome") 名字
					.col-8
						input#iptNome.form-control(type="text", name="obj[nome]", autocomplete="off", value=pdfir.nome)
				.form-group.row
					label.col-4.col-form-label(for="iptMaterial") 材料
					.col-8
						input#iptMaterial.form-control(type="text", name="obj[material]", autocomplete="off", value=pdfir.material)
				.form-group.row
					label.col-4.col-form-label(for="iptPrice") 价格
					.col-8
						input#iptPrice.form-control(type="number", name="obj[price]", placeholder='必填', autocomplete="off", value=pdfir.price)
					.col-4
					.col-8
						span#optPrice(style="display:none").text-danger 必须是数字
				.form-group.row
					label.col-4.col-form-label(for="iptCost") 采购价
					.col-8
						input#iptCost.form-control(type="number", name="obj[cost]", placeholder='必须是数字', autocomplete="off", value=pdfir.cost)
					.col-4
					.col-8
						span#optPriceIn(style="display:none").text-danger 必须是数字
				.form-group.row
					label.col-4.col-form-label(for="iptStock", autocomplete="off") 库存
					.col-8
						input#iptStock.form-control(type="number", name="obj[stock]", autocomplete="off", value=pdfir.stock)
					.col-4
					.col-8
						span#optAddquot(style="display:none").text-danger 必须是数字
				.form-group.row
					label.col-4.col-form-label(for="iptSales", autocomplete="off") 销量
					.col-8
						input#iptSales.form-control(type="number", name="obj[sales]", autocomplete="off", value=pdfir.sales)
					.col-4
					.col-8
						span#optAddquot(style="display:none").text-danger 必须是数字
		#pdAjax_elem.page
			#pdAjax_div
			div(style="height:400px")
			.bomNav-second.scrollDownHide.bg-light
				.row
					.col-6
						select#cterNome.custom-select.custom-select-md.mb-3
					.col-6
						select#ordTime.custom-select.custom-select-md.mb-3
							option(value=-1) 全部
							option(value="year") 今年
							option(value="quarter") 本季度
							option(value="month") 本月
							option(value="week") 本周
							option(value=0) 自定义
			#customizeNav(style="display:none")
				.bomNav-third.bg-light.scrollDownHide.py-2
					.row
						.col-6
							input.form-control(type="text")
						.col-6
							input.form-control(type="text")
		#pdAjaxCter_elem.page(style="display:none")
			#pdAjaxCter_div

		.bomNav-first.bg-light
			.row
				.col-4
					button#sales_btn.bomBtn.btn.btn-info.btn-lg.btn-block(type="button") 销售信息
				.col-4
					button#ctfirs_btn.bomBtn.btn.btn-secondary.btn-lg.btn-block(type="button") 整理
				.col-4
					button#basic_btn.bomBtn.btn.btn-secondary.btn-lg.btn-block(type="button") 基本信息

	script(src="/js/bser/pdfir/pdfir.js")
	script(src="/js/bser/pdfir/update.js")