extends ../aalayout/layout

block content
	.container
		.row
			.col-12.col-lg-3.text-center.pdfirCard
			.col-12.col-lg-6.text-center.pdfirCard

				img(src=pdfir.photo width="100%" height="120px" style="object-fit: scale-down;")
			
				.text-info.text-muted 名称：#{pdfir.nome}
				.text-info.text-muted 编号：#{pdfir.code}
				.text-info.text-muted 价格：#{pdfir.price}
		hr
		form.mt-5
			table.text-center.table-bordered
				tr
					td(width="10%")
