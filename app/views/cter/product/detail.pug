					td S
					td M
					td L
					td XL
					td XXL
				tr
					td
						span 黑色
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
				tr
					td
						span 蓝色
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
					td
						input.iptsty(type="number", value=0)
			hr
			.form-group.row
				.col-md-10.col-sm-6
				.col-md-2.col-sm-6.col-12
					input#btnSubmit.btn.btn-info.btn-block(type="submit" value='提交')
		.footerSpace
	script(src="/js/cter/pdfir/detail.js")