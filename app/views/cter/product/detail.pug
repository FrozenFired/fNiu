extends ../aalayout/layout

block content
	.container
		.row
			.col-12.col-lg-3.text-center.pdfirCard
			.col-12.col-lg-6.text-center.pdfirCard

				img(src=pdfir.photo width="100%" height="120px" style="object-fit: scale-down;")
			
				.text-info.text-muted 名称：#{pdfir.nome}
				.text-info.text-muted 编号：#{pdfir.code}
				if crCter
					- let price = pdfir.price;
					if !isNaN(parseFloat(price))
						- price = price.toFixed(2);
					.text-info.text-info 价格：#{price}
		hr
		- let colors = ["Unico Color"];
		if pdfir.colors && pdfir.colors.length > 0
			- colors = pdfir.colors; 
		- let sizes = ["Unico Size"];
		if pdfir.sizes && pdfir.sizes.length > 0
			- sizes = pdfir.sizes; 
		form#cartForm.mt-5
			input(type="hidden", name="obj[pdfirId]", value=pdfir._id)
			table.table.text-center.table-bordered
				tr
					td(width="10%")
					each size in sizes
						-a;
						td #{size}
				- let c = -1;
				each color in colors
					- c++;
					tr
						td
							span #{color}
						- let s = -1;
						each size in sizes
							- s++;
							td
								input.iptsty(type="number", name="obj[quot]["+c+"]["+s+"]", value=0)
			h3.text-right
				span 总数: 
				span.text-info#quotSapn 0
			hr
			if crCter
				-a;
				.form-group.row
					.col-md-10.col-sm-6
					.col-md-2.col-sm-6.col-12
						button#cartFormSub.btn.btn-success.btn-block(type="button") 提交
		.footerSpace
	script(src="/js/cter/pdfir/detail.js")