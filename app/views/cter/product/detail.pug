extends ../aalayout/layout

block content
	.container
		.row
			.col-12.col-lg-3.text-center.pdfirCard
			.col-12.col-lg-6.text-center.pdfirCard

				img(src=pdfir.photo width="100%" height="120px" style="object-fit: scale-down;")
			
				.text-info.text-muted 名称：#{pdfir.nome}
				.text-info.text-muted 编号：#{pdfir.code}
				.text-info.text-muted 价格：#{pdfir.price}
		hr
		- let colors = ["Unico Color"];
		if pdfir.colors && pdfir.colors.length > 0
			- colors = pdfir.colors; 
		- let sizes = ["Unico Size"];
		if pdfir.sizes && pdfir.sizes.length > 0
			- sizes = pdfir.sizes; 
		form.mt-5
			input.iptsty(type="hidden", name="obj[pdfirId]", value=pdfir._id)
			table.table.text-center.table-bordered
				tr
					td(width="10%")
					each size in sizes
						-a;
						td #{size}
				- let c = -1;
				each color in colors
					- c++;
					tr
						td
							span #{color}
						- let s = -1;
						each size in sizes
							- s++;
							td
								input.iptsty(type="number", name="obj[quot]["+c+"]["+s+"]", value=0)
			hr
			//- .form-group.row
				.col-md-10.col-sm-6
				.col-md-2.col-sm-6.col-12
					input#btnSubmit.btn.btn-info.btn-block(type="submit" value='提交')
		.footerSpace
	script(src="/js/cter/pdfir/detail.js")